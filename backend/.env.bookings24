# ============================================
# Bookings24.eu - SEPARATE PLATFORM CONFIG
# ============================================
# This is a B2B-only platform for EU businesses
# Uses separate database from rezerwacja24.pl

# Database - SEPARATE from rezerwacja24
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bookings24?schema=public"

# Platform identifier
PLATFORM=bookings24
PLATFORM_DOMAIN=bookings24.eu
PLATFORM_NAME=Bookings24

# Currency and locale
DEFAULT_CURRENCY=EUR
DEFAULT_LOCALE=en

# B2B only - require company data
B2B_ONLY=true
REQUIRE_COMPANY_DATA=true

# Port (different from rezerwacja24 to run both)
PORT=4001
NODE_ENV=production

# URLs
FRONTEND_URL=https://app.bookings24.eu
API_URL=https://api.bookings24.eu
CORS_ORIGINS=https://bookings24.eu,https://*.bookings24.eu

# Redis (shared with rezerwacja24, uses different prefix)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT - will be copied from main .env at runtime
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# Stripe configuration for EUR
# TODO: Create separate Stripe account for EU with EUR currency
STRIPE_MODE=test
TRIAL_DAYS=7
PAYMENT_RETRY_HOURS=6
MAX_PAYMENT_RETRIES=3

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email - will use same SMTP as rezerwacja24 for now
SENDGRID_FROM_EMAIL=noreply@bookings24.eu
SENDGRID_FROM_NAME=Bookings24

# SMS - will need separate provider for EU
# TWILIO_ACCOUNT_SID=xxx
# TWILIO_AUTH_TOKEN=xxx
